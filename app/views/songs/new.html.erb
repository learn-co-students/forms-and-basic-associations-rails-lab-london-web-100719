<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %><br>

    <%= f.label :genre %>
    <%= f.collection_select :genre_id, @genres, :id, :name %><br>

    <%= f.fields_for :notes do |ff| %>
        <div>
            <%= ff.label :content %>
            <%= ff.text_field :content %>
        </div>
    <% end %>

    <%= f.submit %>

<% end %>